@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<BookStoreTM.Models.News>

@{
    ViewData["Title"] = "Danh sách tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh mục Tin tức</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 100px;">
                        <div class="input-group-append">
                            <a href="/admin/news/ThemTinTuc" class="btn-sm btn-primary">Thêm mới</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Hình ảnh</th>
                            <th>Tiêu đề tin tức</th>
                            @* <th>Ngày tạo</th> *@
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NewsId</td>
                                <td>
                                    <img src="@Url.Content(item.Image)" alt="@item.Title" style="width: 4rem" />
                                    @* <img src="/@item.Image" alt="@item.Title" style="width: 4rem"/> *@
                                    </td>
                                <td>@item.Title</td>
                                <td>
                                    <a asp-action="SuaTinTuc" asp-route-TinTuc="@item.NewsId" class="btn-sm btn-primary">Sửa</a>
                                    <a asp-action="XoaDMSanPham" asp-route-TinTuc="@item.NewsId" class="btn-sm btn-danger btnDelete">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

