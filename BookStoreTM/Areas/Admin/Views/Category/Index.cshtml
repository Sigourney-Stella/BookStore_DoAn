@model X.PagedList.IPagedList<BookStoreTM.Models.Category>
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "Danh mục loại";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh mục loại</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 100px;">
                        <div class="input-group-append">
                            @* <button type="submit" class="btn btn-default"> *@
                                <a href="/admin/category/ThemMoiDanhMuc" class="btn-sm btn-primary">Thêm mới</a>
                            @* </button> *@
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên danh mục</th>
                            <th>Thứ tự</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var i = 1;
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CategoryId</td>
                                    <td>@item.Title</td>
                                    <td>@item.Position</td>
                                    <td>
                                        <a asp-action="SuaDanhMuc" asp-route-maLoai="@item.CategoryId" class="btn-sm btn-primary">Sửa</a>
                                        <a asp-action="XoaDanhMuc" asp-route-maLoai="@item.CategoryId" class="btn-sm btn-danger btnDelete">Xóa</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4">Không có bản ghi nào </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @* phân trang  *@
                <hr />
                @Html.PagedListPager(Model, page => Url.Action("index", new { page = page }), new PagedListRenderOptions
           {
               LiElementClasses = new string[] { "page-item" },
               PageClasses = new string[] { "page-link" }
           })
            </div>
        </div>
    </div>
</div>


