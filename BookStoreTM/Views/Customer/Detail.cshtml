@model BookStoreTM.Models.Customer
@using BookStoreTM.Models.EF;
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var orderBooksViews = ViewBag.orderBooksViews as List<OrderBooksView>;
    var orderDetailsViews = ViewBag.orderDetailsViews as List<ProductDetailViewModel>;
}

<main class="main-content">
    <div class="account-page-area section-space-y-axis-100">
        <div class="container">
            @* <div class="row">
            <div class="col-lg-3">
            <h2>Tài khoản</h2>
            </div>
            </div> *@
            <div class="row">
                <div class="col-lg-3">
                    <ul class="nav myaccount-tab-trigger" id="account-page-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="account-dashboard-tab" data-bs-toggle="tab" href="#account-dashboard" role="tab" aria-controls="account-dashboard" aria-selected="true">Thông tin tài khoản</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="account-orders-tab" data-bs-toggle="tab" href="#account-orders" role="tab" aria-controls="account-orders" aria-selected="false">Đơn hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="account-details-tab" data-bs-toggle="tab" href="#account-details" role="tab" aria-controls="account-details" aria-selected="false">Hồ sơ</a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-9">
                    <div class="tab-content myaccount-tab-content" id="account-page-tab-content">
                        <div class="tab-pane fade active show" id="account-dashboard" role="tabpanel" aria-labelledby="account-dashboard-tab">
                            @if (Model != null)
                            {
                                <div class="myaccount-dashboard">
                                    <p>
                                        Họ và tên: @Model.Fullname
                                    </p>
                                    <p>
                                        Email : @Model.Email
                                    </p>
                                    <p>
                                        Đại chỉ : @Model.Address
                                    </p>
                                    <p>
                                        Số điện thoại : @Model.Phone
                                    </p>
                                </div>
                            }
                        </div>
                        <div class="tab-pane fade" id="account-orders" role="tabpanel" aria-labelledby="account-orders-tab">
                            @if (orderDetailsViews != null && orderDetailsViews.Any())
                            {
                                @foreach (var order in orderBooksViews)
                                {
                                    @foreach (var detail in orderDetailsViews.Where(d => d.OrderId == order.OrderId))
                                    {
                                        <div class="myaccount-orders d-flex row">
                                            <div class="col-md-2">
                                                <img class="img-product-detail" src="@detail.Images" />
                                            </div>
                                            <div class="col-md-6">
                                                <p class="prduct-name">@detail.ProductName</p>
                                                <p class="prduct-cate">Phân loại: @detail.CatName</p>
                                                <p class="prduct-cate">Số lượng: @detail.Quantity</p>
                                                <div class="price-box pb-1">
                                                    @if (detail.TotalMoney > 0)
                                                    {
                                                        <span class="old-price" style="color: #757575;">
                                                            @BookStoreTM.Common.Common.FormatNumber(detail.Price, 0) VND
                                                        </span>
                                                        
                                                        <span class="new-price text-danger">
                                                            @BookStoreTM.Common.Common.FormatNumber(detail.TotalMoney, 0) VND
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="new-price">
                                                            @BookStoreTM.Common.Common.FormatNumber(detail.Price, 0) VND
                                                        </span>
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-4 mt-4">
                                                <div>
                                                    <p class="totalPrice">Thành tiền: <span class="new-price text-danger"> @BookStoreTM.Common.Common.FormatNumber(order.TotalMoney, 0) VND </span></p>
                                                </div>
                                                <div class="button-wrap mt-4">
                                                    <button type="submit" value="submit" class="btn btn btn-custom-size btn-primary btn-secondary-hover rounded-0" name="submit">Trả hàng</button>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            }
                            else
                            {
                                <div>Bạn chưa có đơn hàng nào</div>
                            }
                        </div>
                        <div class="tab-pane fade" id="account-details" role="tabpanel" aria-labelledby="account-details-tab">
                            <div class="myaccount-details">
                                <form asp-action="Edit" method="post" class="myaccount-form">
                                    <div class="myaccount-form-inner">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" asp-for="CustomerID" />
                                        <div class="single-input single-input-half">
                                            <label asp-for="Fullname" class="control-label">Họ và tên</label>
                                            <input asp-for="Fullname" class="form-control" />
                                            <span asp-validation-for="Fullname" class="text-danger"></span>
                                        </div>
                                        <div class="single-input single-input-half">
                                            <label asp-for="Email" class="control-label">Email</label>
                                            <input asp-for="Email" readonly class="form-control" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="single-input single-input-half">
                                            <label asp-for="Brithday" class="control-label">Ngày sinh</label>
                                            <input asp-for="Brithday" class="form-control" />
                                            <span asp-validation-for="Brithday" class="text-danger"></span>
                                        </div>
                                        <div class="single-input single-input-half">
                                            <label asp-for="Phone" class="control-label">Số điện thoại</label>
                                            <input asp-for="Phone" class="form-control" />
                                            <span asp-validation-for="Phone" class="text-danger"></span>
                                        </div>
                                        <div class="single-input">
                                            <label asp-for="Address" class="control-label">Địa chỉ</label>
                                            <input asp-for="Address" class="form-control" />
                                            <span asp-validation-for="Address" class="text-danger"></span>
                                        </div>
                                        <div class="form-group" style="display:none;">
                                            <label asp-for="Password" class="control-label">Mật khẩu</label>
                                            <input asp-for="Password" class="form-control" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="single-input">
                                            <button class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0" type="submit">
                                                <span>Lưu</span>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<style>
    .img-product-detail {
        height: 100px;
        width: 150px;
    }

    .myaccount-orders.d-flex {
        border-top: 1px solid #E8E8E8;
        padding: 10px 0;
        border-bottom: 1px solid #E8E8E8;
        margin-bottom: 2rem;
        background: white;
    }

    .section-space-y-axis-100 {
        /* background: #f5f5f5; */
        padding-top: 4rem;
    }

    p, p.prduct-name {
        margin-bottom: 0px;
        font-size: 18px;
    }

    p.prduct-cate {
        font-size: 15px;
            color: #757575;
    }

    .col-md-4    {
        padding: 0px;
        text-align: right;
    }

    .old-price{
        margin: 0 4px 0 0;
    }

    p.totalPrice {
        font-size: 17px;
    }

</style>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}